<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_committee_detail_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zhenguo.my_example.Committee_detail_Activity"
    tools:showIn="@layout/activity_committee_detail_">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/star_off"
                android:id="@+id/committee_fav"
                android:layout_weight="1" />
        </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Committee ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/committee3"
            android:layout_weight="1" />

        <TextView
            android:gravity="right"
            android:text=""
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/committee_id"
            android:layout_weight="1" />
    </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trr2"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Chamber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttt"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@android:drawable/btn_dialog"
                android:id="@+id/bioguide_id1"
                android:layout_weight="1" />
            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chamber"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Parent Committee:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L1"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parent_committee"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Contact:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L4"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L6"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Office"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>>
</RelativeLayout>
