<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bill_detail_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zhenguo.my_example.Bill_detail_Activity"
    tools:showIn="@layout/activity_bill_detail_">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/star_off"
            android:id="@+id/bill_fav" />

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Bill ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/committee3"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_id"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Title:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trr2"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/official_title"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Bill Type:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttt"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bill_type"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Sponsor:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L1"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sponsor"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Chamber:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L4"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chamber"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L6"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Introdued on:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L61"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/introduced_on"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Congress URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L62"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Congress_URL"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Version Status:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L63"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Version_Status"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Bill URL:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/L66"
                android:layout_weight="1" />

            <TextView
                android:gravity="right"
                android:text="TextView"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/url"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
